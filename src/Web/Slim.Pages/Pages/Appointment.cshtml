@page
@model Slim.Pages.Pages.AppointmentModel
@{
}

<div class="page-title-overlap bg-dark pt-4">
    <div class="container d-lg-flex justify-content-between py-2 py-lg-3">
        <div class="order-lg-2 mb-3 mb-lg-0 pt-lg-2">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-light flex-lg-nowrap justify-content-center justify-content-lg-start">
                    <li class="breadcrumb-item">
                        <a class="text-nowrap" asp-page="/Index"><i class="bi bi-house"></i>Home</a>
                    </li>
                    <li class="breadcrumb-item text-nowrap">
                        <a asp-page="/Hair"><i class="bi bi-house"></i>Hair</a>
                    </li>
                    <li class="breadcrumb-item text-nowrap">
                        <a asp-page="/Lashes"><i class="bi bi-house"></i>Lashes</a>
                    </li>
                    <li class="breadcrumb-item text-nowrap">
                        <a asp-page="/Lip"><i class="bi bi-house"></i>Lip Gloss</a>
                    </li>
                    <li class="breadcrumb-item text-nowrap active" aria-current="page">Appointment</li>
                </ol>
            </nav>
        </div>
        <div class="order-lg-1 pe-lg-4 text-center text-lg-start">
            <div class="d-flex align-items-center pb-3">
                <div class="img-thumbnail rounded-circle position-relative flex-shrink-0" style="width: 6.375rem;"><img class="rounded-circle" src="~/img/home/hero-slider/logo.PNG" alt="Slim Studio"></div>
                <div class="ps-3">
                    <h3 class="text-light fs-lg mb-0">Book an appointment</h3>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid pb-5 mb-2 mb-md-4 mt-5">
    <div class="row gy-3">
        <section class="col-lg-8">
            <!-- Google Calendar Appointment Scheduling begin -->
            <iframe src="https://calendar.google.com/calendar/appointments/schedules/AcZssZ2Zi8I6RDP8dPDK4-J2h2GJiP-LbHQJ3Evyq1F8EoD8Tv1TdJ481oIAu7nRMjonb4qR9pKtgiG0?gv=true" style="border: 0" width="100" height="800" frameborder="0" name="googleFrame"></iframe>
            <!-- end Google Calendar Appointment Scheduling -->
        </section>

        <aside class="col-lg-4">
            <div class="card border-0 box-shadow">
                <div class="card-body">
                    <h2 class="h5 mb-4">Contact Us</h2>
                    <ul class="list-unstyled fs-sm pb-2">
                        <li class="d-flex align-items-center">
                            <i class="bi bi-geo-alt text-muted mt-n1 me-2"></i>1234 Main St.<br />Anytown, CA 12345 US
                        </li>
                        <li class="d-flex align-items-center">
                            <i class="bi bi-telephone text-muted mt-n1 me-2"></i>(555) 123-4567
                        </li>
                        <li class="d-flex align-items-center">
                            <textarea class="form-control" id="appointment-message" rows="4" placeholder="Tell us more about your request"></textarea>
                        </li>
                        <li class="d-flex align-items-center">
                            <button class="btn btn-primary" type="submit"><i class="bi bi-envelope text-muted mt-n1 me-2"></i> Send Money </button>
                        </li>
                    </ul>
                    <hr class="my-4" />
                    <h2 class="h5 mb-4">Opening Hours</h2>
                    <ul class="list-unstyled fs-sm pb-2">
                        <li class="d-flex align-items-center">
                            <i class="bi bi-clock text-muted mt-n1 me-2"></i>Monday - Friday<br />9:00 AM - 5:00 PM
                        </li>
                        <li class="d-flex align-items-center">
                            <i class="bi bi-clock text-muted mt-n1 me-2"></i>Saturday<br />10:00 AM - 2:00 PM
                        </li>
                        <li class="d-flex align-items-end">
                            <i class="bi bi-clock text-muted mt-n1 me-2"></i>Sunday<br />Closed
                        </li>
                    </ul>
                </div>
            </div>

        </aside>
    </div>

</div>

